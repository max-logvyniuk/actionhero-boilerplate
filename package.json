{
  "name": "actionhero_tutorial",
  "description": "actionhero boilerplate",
  "version": "0.1.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/node": "^14.14.19",
    "actionhero": "^25.0.2",
    "ah-sequelize-plugin": "^3.0.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "ioredis": "^4.19.4",
    "lodash": "^4.17.20",
    "mariadb": "^2.5.2",
    "mocha": "^8.2.1",
    "multer": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.4.0",
    "sequelize-typescript": "^2.0.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "axios": "^0.21.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.20",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
    "actionhero": "actionhero",
    "dev": "ts-node-dev --no-deps --transpile-only ./src/server.ts",
    "build": "tsc --declaration ",
    "lint": "eslint --debug src/**/*.ts",
    "lint:write": "eslint --debug src/**/*.ts --fix",
    "pretty": "prettier --write src __tests__",
    "prettier": "prettier  â€” write src/**/*.js",
    "pretest": "yarn build && yarn lint",
    "postinstall": "yarn build",
    "production": "yarn run postinstall && node ./dist/server.js",
    "start": "node ./dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --collect-coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".babelrc",
          ".eslintrc",
          ".stylelintrc"
        ],
        "options": {
          "parser": ["json", "js", "ts"]
        }
      }
    ],
    "singleQuote": true
  }
}
